import csv

def mean(data):
    """Calculate the mean (average) of a list of numbers."""
    if len(data) == 0:
        return None
    return sum(data) / len(data)
    
def median(data):
    """Calculate the median (middle value) of a list of numbers."""
    if len(data) == 0:
        return None
    
    sorted_data = sorted(data)
    n = len(sorted_data)
    
    if n % 2 == 0:
        return (sorted_data[n//2 - 1] + sorted_data[n//2]) / 2
    else:
        return sorted_data[n//2]
        
def mode(data):
    """Calculate the mode (most frequent value) of a list of numbers."""
    if len(data) == 0:
        return None
    
    frequency = {}
    for value in data:
        frequency[value] = frequency.get(value, 0) + 1
    
    max_freq = max(frequency.values())
    modes = [key for key, freq in frequency.items() if freq == max_freq]
    
    return modes[0] if len(modes) == 1 else modes
    
# Read CSV file
with open('scores.csv', 'r') as file:
    reader = csv.reader(file)
    next(reader)  # Skip header row
    
    # Group scores by enemy speed
    speed_groups = {}
    for row in reader:
        if row:  # Skip empty rows
            score = float(row[1])  # Score Column
            speed = int(float(row[2]))  # EnemySpeed Column
            
            if speed not in speed_groups:
                speed_groups[speed] = []
            speed_groups[speed].append(score)
            
# Calculate statistics for each speed group
for speed in sorted(speed_groups.keys()):
    scores = speed_groups[speed]
    print(f"\n=== Enemy Speed: {speed} ===")
    print(f"Number of tests: {len(scores)}")
    print(f"Mean Score: {mean(scores):.2f}")
    print(f"Median Score: {median(scores):.2f}")
    print(f"Mode Score: {mode(scores)}")
    print(f"All scores: {sorted(scores)}")